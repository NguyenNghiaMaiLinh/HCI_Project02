<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray"
    tools:context=".ChatActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/dsa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:accessibilityPaneTitle="">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="">

            <!--<de.hdodenhof.circleimageview.CircleImageView-->
                <!--android:id="@+id/profile"-->
                <!--android:layout_width="30dp"-->
                <!--android:layout_height="30dp"-->
                <!--android:background="@drawable/ic_account_circle_green_24dp" />-->

            <!--<TextView-->
                <!--android:id="@+id/username"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="30dp"-->
                <!--android:text="Hai Lua"-->
                <!--android:textStyle="bold"-->
                <!--android:textColor="#fff"-->
                <!--android:textSize="18sp" />-->
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/recycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/asd"
        android:layout_below="@+id/dsa"
        android:background="@color/lightgray">

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:padding="8dp">

            <TextView
                android:id="@+id/cvb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@color/white"
                android:padding="8dp"
                android:text="Tôi cần cửa hàng tư vấn một chút" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/zxc"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/cvb"
                android:src="@drawable/user" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">
            <TextView
                android:id="@+id/cvbo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@color/white"
                android:padding="8dp"
                android:text="Chúng tôi có thể giúp gì cho bạn" />



        </LinearLayout>

        <RelativeLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:padding="8dp">

            <TextView
                android:id="@+id/cvb1"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@color/white"
                android:padding="8dp"
                android:text="Nhà tôi có cây lan và nó đang bị héo như hình" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/cvb1"
                android:src="@drawable/user" />

        </RelativeLayout>

        <RelativeLayout

            android:layout_width="330dp"
            android:layout_height="180dp"
            android:layout_marginLeft="76dp"
            android:padding="8dp">

            <ImageView
                android:id="@+id/cvb3"
                android:layout_width="270dp"
                android:layout_height="180dp"
                android:scaleType="fitXY"
                android:src="@drawable/lanhoe" />

            <de.hdodenhof.circleimageview.CircleImageView

                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/cvb3"
                android:src="@drawable/user" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:padding="8dp">

            <TextView
                android:id="@+id/cvb2"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@color/white"
                android:padding="8dp"
                android:text="Xin hỏi cửa hàng mình có phân bón chăm sóc lan ko?" />

            <de.hdodenhof.circleimageview.CircleImageView

                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/cvb2"
                android:src="@drawable/user" />

        </RelativeLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:id="@+id/asd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:padding="5dp">
<ImageView
    android:id="@+id/k"
    android:layout_width="46dp"
    android:layout_height="46dp"
    android:src="@drawable/ic_image_black_24dp"
    />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btnSend"
            android:layout_toRightOf="@+id/k"
            android:hint="Type of message"

            />

        <ImageButton
            android:id="@+id/btnSend"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_send_black_24dp" />
    </RelativeLayout>
</RelativeLayout>